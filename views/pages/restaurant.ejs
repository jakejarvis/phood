<% include ../templates/header %>


<div class="container-fluid" id="container-main">
    
    <h1><%= name %></h1>
    <h2>ID: <%= id %></h2>
    <h2>Address: <%= address %></h2>


    <form action="sendSMS" method="post">
        <input type="text"
            placeholder="Enter your phone number (ex: 1234567890)"
            pattern=".{10,10}"
            required
            size=35
            name="phonenumber"/>
        <input type="hidden" name="name" value="<%= name %>"/>
        <input type="hidden" name="address" value="<%= address %>"/>
        <input type="submit" value="Text me this address!" onclick="send_SMS();"/>
    </form>

    <div class="row">

    <script type="text/javascript">
        function send_SMS(number) {
            alert("A message is on its way!");
            return true;
    }
</script>

<% for(var i = 0; i < images.length; i++) { %>

        <div class="col-xs-3">
            <a href="#" class="thumbnail">
                 <img src="<%= images[i] %>" class="img-responsive">
            </a>
        </div>


<% } %>



    </div>
</div>

